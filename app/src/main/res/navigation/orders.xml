<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orders"
    app:startDestination="@id/ordersFragment">

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.appshopperdriver.ui.orders.OrdersFragment"
        android:label="@string/fragment_orders" >
        <action
            android:id="@+id/action_ordersFragment_to_ordersListFragment"
            app:destination="@id/ordersListFragment" />
    </fragment>
    <fragment
        android:id="@+id/ordersListFragment"
        android:name="com.example.appshopperdriver.ui.orders.OrdersListFragment"
        android:label="@string/fragment_orders"
        tools:layout="@layout/fragment_orders_list" />
</navigation>