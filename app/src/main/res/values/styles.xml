<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- custumizacao do back button da toolbar -->
        <item name="colorControlNormal">@color/secondaryColor</item>
    </style>


    <!-- custumizacao do bootom menu -->
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item> <!-- Tamanho do ícone -->
        <item name="itemHorizontalTranslationEnabled">false</item> <!-- Desativa animação -->
        <item name="itemTextAppearanceActive">@style/ActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/InactiveTextAppearance</item>
    </style>

    <style name="ActiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item> <!-- Tamanho do texto ativo -->
        <item name="android:layout_marginTop">8dp</item> <!-- Espaçamento superior entre ícone e texto -->

    </style>

    <style name="InactiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item> <!-- Tamanho do texto inativo -->
        <item name="android:layout_marginTop">8dp</item> <!-- Espaçamento superior entre ícone e texto -->

    </style>



</resources>